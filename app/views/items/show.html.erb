<h1><%= @item.name %></h1>
<p><strong>By:</strong> <%= @item.creator %></p>
<p><strong>Type of Resource:</strong> <%= @item.material %></p>
<p><strong>Publication Date:</strong> <%= @item.publication_date %></p>
<p><strong>Appears on Wish List:</strong> <%= @item.list.name %></p>

<h2>Available At</h2>
<% @sources.each do |s| %>
    <p><%= s.name %> -- <%= s.location %><br>
    <% if s.fee == true %>
    There is a fee.
    <% end %><br>
    <strong>Point of Contact:</strong> <%= s.contact %>
    </p>
<% end %>
<br>

<p><%= button_to "Edit This Item", edit_list_item_path(@item.list, @item), method: :get %></p>