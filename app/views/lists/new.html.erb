<%= form_for(@list) do |f| %>
    <p><%= f.label :name %>
    <%= f.text_field :name %></p>
    
    <p>Topics:</p>

    <%= f.collection_check_boxes(:topic_ids, @topics, :id, :name_with_project) do |b| %>
        <p><%= b.check_box %> <%= b.label %></p>
    <% end %>
    <br>

    <%= f.submit %>
<% end %>