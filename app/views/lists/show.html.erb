<h1><%= @list.name %></h1>
<p><strong>for projects:</strong><br>
<% @list.topics.each do |t| %>
    <%= t.project.name %> - <%= t.name %>
<% end %>
</p>
<ul>
<% @items.each do |i| %>
    <li><p><%= link_to i.name, list_item_path(@list, i) %>, <em><%= i.material %></em></p></li>
<% end %>
</ul>
<br>

<p><%= link_to "Add an Item", new_list_item_path(@list) %></p>
<p><%= link_to "Edit this List", edit_list_path(@list) %></p>